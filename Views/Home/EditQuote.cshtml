@{
    ViewBag.Title = "Quote Form";
}
<!--Where we can edit the quote-->


@model EditQuoteViewModel

<h1 class="text-center">Record your favorite quote!</h1>
<br />

<div class="text-center">
    <form method="post" asp-action="SaveQuote">
        <label asp-for="@Model.Quote.aQuote">Quote</label>
        <input asp-for="@Model.Quote.aQuote" />
        <br />

        <label asp-for="@Model.Quote.Author">Author</label>
        <input asp-for="@Model.Quote.Author" />
        <br />

        <label asp-for="@Model.Quote.Date">Date</label>
        <input asp-for="@Model.Quote.Date" />
        <br />

        <label asp-for="@Model.Quote.Subject">Subject</label>
        <input asp-for="@Model.Quote.Subject" />
        <br />

        <label asp-for="@Model.Quote.Citation">Citation</label>
        <input asp-for="@Model.Quote.Citation" />
        <br />

        <button type="submit" class="btn-danger">Finish</button>
        <input id="quoteID" name="quoteID" value="@Model.Quote.QuoteID" hidden />
        <div asp-validation-summary="All"></div>
    </form>
    <form asp-action="DeleteQuote" method="post">
        <input id="quoteID" name="quoteID" value="@Model.Quote.QuoteID" hidden />
        <button type="submit" class="alert-dark">Remove</button>
    </form>
    <p><a asp-action="Index">Home</a></p>
</div>